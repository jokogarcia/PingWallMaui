<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PingWall.ProgressBarTest"
             xmlns:cc="clr-namespace:PingWall.Controls"
             xmlns:vm="clr-namespace:PingWall.ViewModel"
             x:DataType="vm:ProgressBarTestViewModel"
             Title="ProgressBarTest">
    <VerticalStackLayout>
        <cc:VerticalProgressBar Progress="{Binding Progress, Mode=TwoWay}"
                                Margin="10"
                                WidthRequest="10"
                                HorizontalOptions="Start"
                                RestColor="Fuchsia"
                                ProgressColor="Green"
                                HeightRequest="100"
                                />
       
        <Label Text="{Binding Progress, Mode=TwoWay}"/>
    </VerticalStackLayout>
</ContentPage>