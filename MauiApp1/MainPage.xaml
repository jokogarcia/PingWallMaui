<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewModel="clr-namespace:PingWall.ViewModel"
             xmlns:cc="clr-namespace:PingWall.Controls"
             xmlns:helper="clr-namespace:PingWall.Helpers"
             x:DataType="viewModel:MainPageViewModel"
             Title="{Binding Title}"
             x:Class="PingWall.MainPage">
    <ContentPage.ToolbarItems>
        <ToolbarItem Text="Help"
                     Order="Primary"
                     Priority="1"
                     Command="{Binding OpenHelpCommand}">
            <ToolbarItem.IconImageSource>
                <FontImageSource FontFamily="FAS" Glyph="{x:Static helper:FontAwesomeHelper.Question}"/>
            </ToolbarItem.IconImageSource>
        </ToolbarItem>
    </ContentPage.ToolbarItems>
    <FlexLayout Direction="Row" Wrap="Wrap" x:Name="MainFlexLayout">

    </FlexLayout>
</ContentPage>
