<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             WidthRequest="250"
             HeightRequest="350"
             xmlns:helper="clr-namespace:PingWall.Helpers"
    VerticalOptions="Start"
             x:Class="PingWall.Controls.PingCard_Empty">
    <Frame BorderColor="DarkBlue" Padding="5" Margin="5">
        <Grid>
            <VerticalStackLayout
                Spacing="10"
                MaximumWidthRequest="45"
                HorizontalOptions="Center" 
                        VerticalOptions="Center" >
                <ImageButton
                        BorderColor="Gray"
                        BorderWidth="1"
                        Clicked="Button_Clicked">
                    <ImageButton.Source>
                        <FontImageSource FontFamily="FAS" Glyph="{Static helper:FontAwesomeHelper.Plus}" Color="Gray" Size="50"/>
                    </ImageButton.Source>
                </ImageButton>
                <!--<ImageButton Source="question.png"  
                        BorderColor="Gray"
                        BorderWidth="1"
                        IsVisible="False"
                        Clicked="HelpButton_Clicked"/>-->
                
            </VerticalStackLayout>
            
        </Grid>
        </Frame>
</ContentView>
