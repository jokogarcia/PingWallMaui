<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             WidthRequest="250"
             HeightRequest="350"
             xmlns:cc="clr-namespace:PingWall.Controls"
             xmlns:helper="clr-namespace:PingWall.Helpers"
             VerticalOptions="Start"
             x:Class="PingWall.Controls.PingCard_Empty">
    <Frame BorderColor="DarkBlue" Padding="5" Margin="5">
        <Grid>
            <VerticalStackLayout
                Spacing="10"
                MaximumWidthRequest="45"
                HorizontalOptions="Center" 
                        VerticalOptions="Center" >

                <cc:FAImageButton
                        BorderColor="Gray"
                        BorderWidth="1"
                        Glyph="{Static helper:FontAwesomeHelper.Plus}"
                        Clicked="Button_Clicked">
                </cc:FAImageButton>
                <!--<ImageButton Source="question.png"  
                        BorderColor="Gray"
                        BorderWidth="1"
                        IsVisible="False"
                        Clicked="HelpButton_Clicked"/>-->
                
            </VerticalStackLayout>
            
        </Grid>
        </Frame>
</ContentView>
